{
  "compilerOptions": {
    "target": "es2017",
    "module": "es6",
    "moduleResolution": "node",
    "jsx": "preserve",
    "outDir": ".",
    "alwaysStrict": false,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"],
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "types/"
  },
  "include": ["components/*.tsx", "styling/*.tsx", "utils/*.ts"],
  "exclude": []
}
