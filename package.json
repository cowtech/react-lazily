{
  "name": "@cowtech/react-lazily",
  "version": "3.1.8",
  "description": "CowTech React components and utilities.",
  "homepage": "https://sw.cowtech.it/react-lazily",
  "repository": "github:cowtech/react-lazily",
  "keywords": [
    "react",
    "lazily"
  ],
  "bugs": {
    "url": "https://github.com/cowtech/react-lazily/issues"
  },
  "author": "Shogun <shogun@cowtech.it>",
  "license": "ISC",
  "private": false,
  "files": [
    "images",
    "dist",
    "CHANGELOG.md",
    "LICENSE.md",
    "README.md"
  ],
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "swc --delete-dir-on-start -w -d dist src",
    "prebuild": "rm -rf dist && npm run lint",
    "build": "swc -d dist src",
    "postbuild": "tsc -p . --emitDeclarationOnly && cat src/utils/sitemap.d.ts.tpl >> dist/index.d.ts && cp -a src/assets dist",
    "format": "prettier -w src",
    "lint": "eslint src",
    "ci": "npm run build && npm run lint",
    "prepublishOnly": "npm run ci",
    "postpublish": "git push origin && git push origin -f --tags",
    "update:normalize": "curl -sSL https://cdn.jsdelivr.net/npm/modern-normalize@1.1.0/modern-normalize.min.css | prettier --parser css | ghead -n -1 > src/assets/styles/normalize.css"
  },
  "peerDependencies": {
    "@unocss/core": "^0.47.5",
    "@unocss/preset-mini": "^0.47.5",
    "react": "^18.0.2",
    "react-dom": "^18.0.2"
  },
  "devDependencies": {
    "@cowtech/eslint-config": "^8.8.0",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.19",
    "@types/node": "^18.11.9",
    "@types/prettier": "^2.7.1",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@unocss/core": "^0.47.5",
    "@unocss/preset-mini": "^0.47.5",
    "chokidar": "^3.5.3",
    "prettier": "^2.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=14.15.0"
  }
}
